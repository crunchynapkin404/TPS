# TPS V1.4 Environment Configuration Template
# Copy this to .env and update with your secure values

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secure-secret-key-here

# Environment settings
DEBUG=False
ENVIRONMENT=production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CORS Configuration (for production API access)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration
# For development (SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL) - recommended
DATABASE_URL=postgresql://tps_user:secure_db_password@localhost:5432/tps_production
DB_NAME=tps_production
DB_USER=tps_user
DB_PASSWORD=secure_db_password_min_16_chars
DB_HOST=localhost
DB_PORT=5432

# TPS Business Configuration
TPS_MAX_WAAKDIENST_WEEKS_PER_YEAR=8
TPS_MAX_INCIDENT_WEEKS_PER_YEAR=12
TPS_MIN_GAP_WAAKDIENST_DAYS=14
TPS_MIN_GAP_INCIDENT_DAYS=7
TPS_WAAKDIENST_HOURS_PER_WEEK=168
TPS_INCIDENT_HOURS_PER_WEEK=45

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=secure_email_password
DEFAULT_FROM_EMAIL=TPS System <noreply@yourdomain.com>

# Redis Configuration (for Celery/Channels)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Timezone
TIME_ZONE=Europe/Amsterdam

# Admin Configuration
# SECURITY WARNING: Use strong passwords in production!
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=SecureAdminPassword123!@#
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Organization Configuration
ORG_NAME=Your Organization Name
ORG_DOMAIN=yourdomain.com
ORG_PHONE_PREFIX=+31 6
ORG_EMPLOYEE_ID_PREFIX=EMP

# Security Configuration
# SESSION_COOKIE_AGE=3600  # 1 hour (uncomment if needed)
# CSRF_COOKIE_AGE=3600     # 1 hour (uncomment if needed)

# Development/Testing Configuration (only for development environments)
# TEST_DOMAIN=test.yourdomain.local
# TEST_PASSWORD=SecureTestPassword123!
# CREATE_TEST_USERS=False
# TEST_USER_COUNT=5