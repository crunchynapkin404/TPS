# TPS V1.4 Environment Configuration Template
# Copy this to .env and update with your secure values

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secure-secret-key-here

# Environment settings
DEBUG=True
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL) - uncomment and configure
# DATABASE_URL=postgresql://username:password@host:port/database_name
# DB_NAME=tps_production
# DB_USER=tps_user
# DB_PASSWORD=secure_db_password
# DB_HOST=localhost
# DB_PORT=5432

# TPS Business Configuration
TPS_MAX_WAAKDIENST_WEEKS_PER_YEAR=8
TPS_MAX_INCIDENT_WEEKS_PER_YEAR=12
TPS_MIN_GAP_WAAKDIENST_DAYS=14
TPS_MIN_GAP_INCIDENT_DAYS=7
TPS_WAAKDIENST_HOURS_PER_WEEK=168
TPS_INCIDENT_HOURS_PER_WEEK=45

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production SMTP - uncomment and configure
# EMAIL_HOST=smtp.your-domain.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@your-domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Redis Configuration (for Celery/Channels)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Timezone
TIME_ZONE=Europe/Amsterdam

# Admin Configuration
# SECURITY WARNING: Change these in production!
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=change-this-secure-password
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Test Data Configuration (for development/testing only)
TEST_DOMAIN=your-test-domain.local
TEST_PASSWORD=secure-test-password
CREATE_TEST_USERS=True
TEST_USER_COUNT=8

# Organization Configuration
ORG_NAME=Your Organization
ORG_DOMAIN=your-domain.com
ORG_PHONE_PREFIX=+31 6
ORG_EMPLOYEE_ID_PREFIX=EMP